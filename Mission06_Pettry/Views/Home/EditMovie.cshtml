@* Edit Movie page - form to update an existing movie in the collection *@
@model Mission06_Pettry.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h1 class="display-4 text-center">Edit Movie</h1>
<br />

<div class="row justify-content-center">
    <div class="col-md-6">
        @* Form posts to the EditMovie action *@
        <form asp-controller="Home" asp-action="EditMovie" method="post">

            @* Hidden field to preserve the MovieId *@
            <input type="hidden" asp-for="MovieId" />

            @* Category dropdown - populated from database *@
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">-- Select a Category --</option>
                    @foreach (var category in (ViewBag.Categories as List<Mission06_Pettry.Models.Category>)!)
                    {
                        <option value="@category.CategoryId">@category.CategoryName</option>
                    }
                </select>
            </div>

            @* Title - required text input *@
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @* Year - required, minimum 1888 *@
            <div class="mb-3">
                <label asp-for="Year" class="form-label">Year</label>
                <input asp-for="Year" class="form-control" type="number" min="1888" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            @* Director - optional text input *@
            <div class="mb-3">
                <label asp-for="Director" class="form-label">Director</label>
                <input asp-for="Director" class="form-control" />
            </div>

            @* Rating - optional text input *@
            <div class="mb-3">
                <label asp-for="Rating" class="form-label">Rating</label>
                <input asp-for="Rating" class="form-control" />
            </div>

            @* Edited - required boolean checkbox *@
            <div class="mb-3 form-check">
                <input asp-for="Edited" class="form-check-input" type="checkbox" />
                <label asp-for="Edited" class="form-check-label">Edited?</label>
            </div>

            @* Lent To - optional text input *@
            <div class="mb-3">
                <label asp-for="LentTo" class="form-label">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
            </div>

            @* Copied to Plex - required boolean checkbox *@
            <div class="mb-3 form-check">
                <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox" />
                <label asp-for="CopiedToPlex" class="form-check-label">Copied to Plex?</label>
            </div>

            @* Notes - optional, limited to 25 characters *@
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <input asp-for="Notes" class="form-control" maxlength="25" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            @* Submit and Cancel buttons *@
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="MovieCollection" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
