@* Movie Collection page - displays all movies stored in the database *@
@model List<Mission06_Pettry.Models.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<h1 class="display-4 text-center">Movie Collection</h1>
<br />

@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Category</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Category?.CategoryName</td>
                    <td>@movie.Rating</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@(movie.LentTo ?? "—")</td>
                    <td>@(movie.Notes ?? "—")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No movies in the collection yet. <a asp-action="AddMovie">Add one!</a></p>
}
