@* Movie Collection page - displays all movies with Edit/Delete options *@
@model List<Mission06_Pettry.Models.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<h1 class="display-4 text-center">Movie Collection</h1>
<br />

@* Link to add a new movie *@
<div class="mb-3">
    <a asp-action="AddMovie" class="btn btn-success">Add New Movie</a>
</div>

@if (Model.Any())
{
    @* Bootstrap-styled table with striped rows and hover effect *@
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Category</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Copied to Plex</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@(movie.Director ?? "—")</td>
                    <td>@(movie.Category?.CategoryName ?? "—")</td>
                    <td>@(movie.Rating ?? "—")</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@(movie.LentTo ?? "—")</td>
                    <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                    <td>@(movie.Notes ?? "—")</td>
                    <td>
                        @* Edit and Delete action buttons *@
                        <a asp-action="EditMovie" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteMovie" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No movies in the collection yet. <a asp-action="AddMovie">Add one!</a></p>
}
